FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      turbulenceProperties;
}

// Reynolds-Averaged Navierâ€“Stokes
simulationType  RAS;

RAS
{
    // k-omega SST: robust for adverse pressure gradients and separation
    RASModel        kOmegaSST;

    turbulence      on;
    printCoeffs     on;
}
